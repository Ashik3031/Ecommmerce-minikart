<!-- views/orderDetail.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Detail</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      margin-top: 50px;
    }

    .card {
      background-color: #fff;
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    .list-group-item {
      background-color: #f8f9fa;
      border: none;
    }

    h1 {
      color: #007bff;
    }

    h2 {
      color: #343a40;
    }

    .card-text {
      color: #6c757d;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1 class="text-center">Order Detail</h1>
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <p class="card-text"><strong>Buyer Name:</strong> <%= orders.username %></p>
          
          <a href="/generateInvoice/<%= orders._id %>"><button class="btn btn-primary" >Download Invoice</button></a>
        </div>
    
        <h2 class="card-title">Products</h2>
        <ul class="list-group">
          
              <li class="list-group-item">
                <p><strong>Product:</strong> <%= order.productName %></p>
                <p><strong>model:</strong> <%= order.model %></p>
                
                
                <% if (order.images && order.images.length > 0) { %>
                  <img src="<%= order.images[1] %>" alt="Product Image" style="height: 100px;">
                <% } else { %>
                  <p>No image available</p>
                <% } %>
                
              </li>
            
        </ul>        
        <p class="card-text"><strong>Total Quantity:</strong> <%= orders.totalQuantity %></p>
        <p class="card-text"><strong>Total Price:</strong> <%= orders.totalPrice %></p>

        <h2 class="card-title">Address</h2>
        <% if (orders.address) { %>
          <p class="card-text">
            <%= orders.address.address %>, <%= orders.address.city %>,
            <%= orders.address.state %> - <%= orders.address.pincode %>
          </p>
        <% } else { %>
          <p class="card-text">No address available</p>
        <% } %>

        <p class="card-text"><strong>orders Date:</strong> <%= orders.ordersDate %></p>
        <p class="card-text"><strong>Payment Method:</strong> <%= orders.paymentMethod %></p>
        <p class="card-text"><strong>Delivery Date:</strong> <%= orders.deliveryDate %></p>
      </div>
    </div>
  </div>

  
  
  <!-- Add Bootstrap JS and Popper.js (required for Bootstrap) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
