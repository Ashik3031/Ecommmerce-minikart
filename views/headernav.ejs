<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl">
        <div class="col-lg-3 d-none d-lg-block">
            <div class="col-lg mt-2">
                <a href="/index" class="text-decoration-none">
                    <span class="h1 text-uppercase text-primary bg-dark px-2">Mini</span>
                    <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">kart</span>
                </a>
            </div>
        </div>
        <div class="col-lg-8">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="/index" class="nav-item nav-link active">Home</a>
                        <a href="/listproduct" class="nav-item nav-link">Shop</a>
                        <a href="/cart/<%= user._id %>" class="nav-item nav-link">Shopping Cart</a>
                        
                    </div>
                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        <a href="/wishlist" class="btn px-0">
                            <i class="fas fa-heart text-primary"></i>
                            <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;"></span>
                        </a>
                        <a href="/cart/<%= user._id %>" >
                            <i class="fas fa-shopping-cart text-primary"></i></a>
                            <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">
                                <% if (cartlen) { %>
                                    <div class="notification-circle"
                                      style="font-size: 0.8rem; text-align:center;color: black;padding-top: 3px;">
                                      <%= cartlen %>
                                    </div>
                                    <% } else { %>
                                        <div>0</div>
                                      <% } %>
                            </span>
                        </a>
                    </div>
                    <a href="/userprofile" class="btn px-0 ml-3">
                        <i class="fas fa-user text-primary"></i>
                        <span class="badge text-secondary border border-secondary " style="padding-bottom: 2px;"><%= user.username%></span>
                    </a>
                    
                    <!-- Add Logout Button -->
                    <a href="/user/logout" class="btn px-0 ml-3">
                        <i class="fas fa-sign-out-alt text-primary"></i>
                        <span class="badge text-secondary border border-secondary " style="padding-bottom: 2px;">Logout</span>
                    </a>
                </div>
            </nav>
        </div>
    </div>
</div>
