<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wishlist</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Add custom styles here if needed */
  </style>
</head>
<body>
    <%- include('headernav') %>
  <div class="container mt-5">
    <h1>Wishlist</h1>

    <% if (wishlist.length === 0) { %>
      <p>Your wishlist is empty.</p>
    <% } else { %>
      <div class="row">
        <% wishlist.forEach(item => { %>
            <div class="col-md-3 mb-4">
                <div class="card border-0 rounded">
                  <img src="<%= item.image %>" class="card-img-top rounded-top img-fluid" alt="<%= item.productName %>" style="height: 150px; object-fit: contain;">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.product %></h5>
                    <p class="card-text">Price: $<%= item.price %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/addtocart/<%= item.productId %>/<%= item.userId %>"><button class="btn btn-primary" onclick="addToCart('<%= item.productName %>')">Add to Cart</button></a>
                        <a href="/removewishlist/<%= item._id %>"><button class="btn btn-danger" onclick="removeFromWishlist('<%= item.productName %>')">Remove</button>
                    </div>
                  </div>
                </div>
              </div>
              
              
        <% }); %>
      </div>
    <% } %>

  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    function addToCart(productName) {
      // Implement your logic to add the product to the cart here
      console.log('Added to cart: ' + productName);
    }

    function removeFromWishlist(productName) {
      // Implement your logic to remove the product from the wishlist here
      console.log('Removed from wishlist: ' + productName);
    }
  </script>
</body>
</html>
