<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-Z2H8NK6rPD7+Hpn8KkzBdTC5Qqy1FkI7uViF1nu3q7sFChFakCMp2VFBMm57Psfy" crossorigin="anonymous">
  <style>
    body {
      background-color: #f8f9fa; /* Set a background color for the body */
    }

    .container {
      margin-top: 50px; /* Adjust top margin for the container */
    }

    .row-eq-height {
      display: flex;
      flex-wrap: wrap;
    }

    .sidebar {
      background-color: #007bff; /* Change the color of the sidebar */
      color: white; /* Set text color to white */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .info-section {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .sidebar a {
        color: #fff; /* Set text color for the sidebar links */
      }
      .logout-btn {
        margin-bottom: auto;
      }
  </style>
</head>
<body>
  <%- include('headernav') %>

<div class="container">
  <div class="row row-eq-height">

    <!-- Sidebar -->
    <div class="col-md-3 sidebar"> <!-- Add the sidebar class -->
      
      <ul class="nav flex-column mt-4">
        <li class="nav-item">
          <a class="nav-link" href="/editprofile">Edit Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders">Your Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/addressdetail">Add/Edit Address</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/wallet">Wallet</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/changepass">Change Password</a>
        </li>
      </ul>
      <div class="logout-btn">
        <a href="/user/logout"><button class="btn btn-danger btn-block">Logout</button></a>
      </div>
    </div>

    <!-- User Information -->
    <div class="col-md-8 info-section ml-1">
      <h2>User Information</h2>
      <p><strong>User Name:</strong> <%= user.username %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
      <h3>Address</h3>
      <p><strong>First Name:</strong> <%= (addressData && addressData.firstname) ? addressData.firstname : 'Add address' %></p>
<p><strong>Last Name:</strong> <%= (addressData && addressData.lastname) ? addressData.lastname : 'Add address' %></p>
<p><strong>Address:</strong> <%= (addressData && addressData.address) ? addressData.address : 'Add address' %></p>
<p><strong>City:</strong> <%= (addressData && addressData.city) ? addressData.city : 'Add address' %></p>
<p><strong>State:</strong> <%= (addressData && addressData.state) ? addressData.state : 'Add address' %></p>
<p><strong>Pin Code:</strong> <%= (addressData && addressData.pincode) ? addressData.pincode : 'Add address' %></p>

      
    <a href="/address"><button class="btn btn-primary">Add Address</button></a>
    </div>

  </div>
</div>

</body>
<script>
  document.addEventListener('DOMContentLoaded', function () {
      // Get the form element
      var uploadForm = document.getElementById('uploadForm');

      // Attach an event listener to the form
      uploadForm.addEventListener('submit', function () {
          // Get the image and form elements
          var userPhoto = document.getElementById('userPhoto');
          var uploadForm = document.getElementById('uploadForm');

          // Hide the image and the form
          userPhoto.style.display = 'none';
          uploadForm.style.display = 'none';
      });
  });

    // Wait for the document to be ready
    $(document).ready(function () {
      // Attach an event listener to the form
      $('#uploadForm').submit(function () {
          // Hide the image and the form
          $('#userPhoto').hide();
          $('#uploadForm').hide();
      });
  });
</script>

<%- include('footer') %>
